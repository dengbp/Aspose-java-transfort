<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yrnet.viewweb.business.login.mapper.UserRelationMapper">


    <select id="selectByWxOpenId" resultType="com.yrnet.viewweb.business.login.entity.UserRelation">
        select * from user_relation where
        <if test="type == 1">
            WX_OPEN_ID = #{id}
        </if>
        <if test="type == 2">
            pc_id = #{id}
        </if>
        limit 1
    </select>
</mapper>
